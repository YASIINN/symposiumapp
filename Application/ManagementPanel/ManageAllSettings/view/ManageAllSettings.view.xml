<mvc:View controllerName="symposiumapp.Application.ManagementPanel.ManageAllSettings.controller.ManageAllSettings" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    xmlns:u="sap.ui.unified" 
    xmlns="sap.m">
    <Page showHeader="false" enableScrolling="true">
        <content>
            <IconTabBar id="idIconTabBarSeparatorNoIcon" select="changekey" expanded="true" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter key="general" icon="sap-icon://action-settings" text="General Settings " iconColor="Positive" count="1">
                        <HBox alignItems="End" justifyContent="End">
                            <Button text="Edit" icon="sap-icon://edit" press="setdateenb" type="Emphasized" />
                        </HBox>
                        <VBox>
                            <Text text="Starting Date" />
                            <DatePicker change="datecontrol" enabled="false" id="DP4" valueFormat="dd.MM.yyyy" displayFormat="dd.MM.yyyy" value="{path:'/generalsettings/0/gsbegdt'}" class="sapUiSmallMarginBottom"/>
                            <Text text="End Date" />
                            <DatePicker change="datecontrol" id="DP5" enabled="false" valueFormat="dd.MM.yyyy" displayFormat="dd.MM.yyyy" value="{path:'/generalsettings/0/gsenddt'}" class="sapUiSmallMarginBottom"/>
                        </VBox>
                        <HBox alignItems="End" justifyContent="End">
                            <Button id="savedate" visible="false" text="Save" press="setsysdate" icon="sap-icon://save" type="Emphasized" />
                        </HBox>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="topics" icon="sap-icon://list" iconColor="Natural" text="Topic Settings" count="2">
                        <Button text="Add New Topic" type="Transparent" icon="sap-icon://add" press="addtopic" />
                        <Table id="topicstable" inset="false" items="{
                                            path: '/edittopics'
                                        }">
                            <infoToolbar>
                                <Toolbar active="true">
                                    <Label text="list of topics in the system"/>
                                </Toolbar>
                            </infoToolbar>
                            <columns>
                                <Column width="3rem">
                                    <Text text="Topic Name" />
                                </Column>
                                <Column width="3rem">
                                </Column>

                                <Column width="10rem">
                                </Column>

                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier text="{tptxt}"/>
                                        <HBox>
                                            <Button type="Transparent" icon="sap-icon://delete" tooltip="Delete" press="deletetopic"/>
                                            <Button type="Transparent" icon="sap-icon://edit" tooltip="Edit" press="setvisible"/>
                                        </HBox>
                                        <HBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                            <Input value="{tptxt}" width="500px" enabled="false" visible="false" />
                                            <Button type="Transparent" icon="sap-icon://save" tooltip="Save" text="Click here to save the change" press="edittopic" visible="false"/>
                                        </HBox>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="titles" icon="sap-icon://key-user-settings" iconColor="Positive" text="Title Settings" count="3">
                        <Button text="Add New Title" type="Transparent" icon="sap-icon://add" press="addtitle" />
                        <Table id="titlestable" inset="false" items="{
                                            path: '/titleset'
                                        }">
                            <infoToolbar>
                                <Toolbar active="true">
                                    <Label text="list of title in the system"/>
                                </Toolbar>
                            </infoToolbar>
                            <columns>
                                <Column width="3rem">
                                    <Text text="Title Name" />
                                </Column>
                                <Column width="3rem">
                                </Column>

                                <Column width="10rem">
                                </Column>

                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier text="{titletxt}"/>
                                        <HBox>
                                            <Button type="Transparent" icon="sap-icon://delete" tooltip="Delete" press="deltitle"/>
                                            <Button type="Transparent" icon="sap-icon://edit" tooltip="Edit" press="setvisible"/>
                                        </HBox>
                                        <HBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                            <Input value="{titletxt}" width="500px" enabled="false" visible="false" />
                                            <Button type="Transparent" icon="sap-icon://save" tooltip="Save" text="Click here to save the change" press="edittitle" visible="false"/>
                                        </HBox>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>



                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="files" icon="sap-icon://attachment" iconColor="Natural" text="Template Folder Settings" count="4">

                        <Table id="filestable" inset="false" items="{
                                            path: '/gsetfolder'
                                        }">
                            <infoToolbar>
                                <Toolbar active="true">
                                    <Label text="System Template Files"/>
                                </Toolbar>
                            </infoToolbar>
                            <columns>
                                <Column width="3rem">
                                    <Text text="Folder Name" />
                                </Column>
                                <Column width="3rem">
                                </Column>

                                <Column width="10rem">
                                </Column>

                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Link text="{gsfname}" target="" href="/symposiumapp{gsftemppath}"/>
                                        <HBox>
                                            <!-- <Button type="Transparent" icon="sap-icon://delete" tooltip="Delete System Template File" press="delfile"/> -->
                                            <Button type="Transparent" icon="sap-icon://edit" tooltip="Edit" press="editfilevisible"/>
                                        </HBox>
                                        <HBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                            <Input value="{gsfname}" width="500px" enabled="false" visible="false" />
                                            <Button type="Transparent" icon="sap-icon://save" tooltip="Save" text="Click here to save the change" press="editfile" visible="false"/>
                                        </HBox>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="mails" iconColor="Positive" icon="sap-icon://email" text="System Mail Settings" count="5">

                        <Table id="mailstable" inset="false" items="{
                                            path: '/mailsett'
                                        }">
                            <infoToolbar>
                                <Toolbar active="true">
                                    <Label text="System Mail Settings"/>
                                </Toolbar>
                            </infoToolbar>
                            <columns>
                                <Column width="3rem">
                                    <Text text="Mail Name" />
                                </Column>
                                <Column width="3rem">
                                    <Text text="Mail Password"/>
                                </Column>

                                <Column width="10rem">
                                </Column>

                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Input value="{gsmname}" width="100%" enabled="false" />
                                        <HBox>
                                            <Input value="{gsmpass}" id="mailpasid" type="Password" enabled="false" width="100%" />
                                            <Button type="Transparent" icon="sap-icon://edit" tooltip="Edit" press="setidvis"/>

                                            <!-- <Button type="Transparent" icon="sap-icon://show" id="showid" tooltip="Show the Password" press="showpas"/> -->
                                        </HBox>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                        <VBox alignItems="Center" justifyContent="Center" id="setidvis" visible="false">
                            <Title text="Set Mail Settings"/>

                            <HBox alignItems="Center" class="SapUiLargeMarginTop" justifyContent="Center">
                                <VBox>
                                    <Label text="Sys Mail : " class="sapUiTinyMarginEnd"/>
                                    <Input value="{/mailsett/0/gsmname}" width="300px"/>
                                </VBox>
                            </HBox>
                            <HBox alignItems="Center" class="SapUiLargeMarginTop" justifyContent="Center">
                                <VBox>
                                    <Label text="Sys Pass : " class="sapUiTinyMarginEnd"/>
                                    <Input value="{/mailsett/0/gsmpass}" width="300px"/>
                                </VBox>
                            </HBox>
                            <HBox alignItems="Center" class="SapUiLargeMarginTop" justifyContent="Center">
                                <VBox>
                                    <Button type="Emphasized" text="Save Changes" icon="sap-icon://save" press="savemailset" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="fees" icon="sap-icon://money-bills" iconColor="Natural" text="Fees Settings" count="6">
                        <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
                            <Table id="feetable" inset="false" items="{
                                            path: '/fesett'
                                        }">
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button type="Transparent" icon="sap-icon://add" text="Add New Fee" press="editfee"/>
                                            <ToolbarSpacer />
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <infoToolbar>
                                    <Toolbar active="ture">
                                        <Title text="Fee Setting's"/>
                                    </Toolbar>
                                </infoToolbar>
                                <columns>
                                    <Column
				>
                                        <Text text="Item" />
                                    </Column>
                                    <Column	>
                                        <Text text="Description"/>
                                    </Column>
                                    <Column	>
                                        <Text text="Unit Price"/>
                                    </Column>
                                    <Column >
                                        <Text text="VAT%" />
                                    </Column>
                                    <Column
				>
                                        <Text text="VAT" />
                                    </Column>
                                    <Column	>
                                        <Text text="Currency"/>
                                    </Column>
                                    <Column	>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{fsid}" />

                                            <Text text="{fstxt}"/>
                                            <Text text="{fsprice}" />
                                            <Text text="{vaty}"/>
                                            <Text text="{vat}"/>

                                            <Text text="{fbtxt}"/>
                                            <HBox>
                                                <Button type="Transparent" icon="sap-icon://delete" tooltip="Delete Fees" press="delfee" />
                                                <Button type="Transparent" icon="sap-icon://edit" tooltip="Edit Fees" press="editfee" />
                                            </HBox>

                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="payments" icon="sap-icon://simple-payment" iconColor="Positive" text="Payment Way Settings" count="7">
                        <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
                            <Table id="paymenttable" inset="false" items="{
                                            path: '/paymentset'
                                        }">
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button type="Transparent" icon="sap-icon://add" text="Add New Payment Way" press="editpayment"/>
                                            <ToolbarSpacer />
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <infoToolbar>
                                    <Toolbar active="ture">
                                        <Title text="Payment Way Setting's"/>
                                    </Toolbar>
                                </infoToolbar>
                                <columns>
                                    <Column>
                                        <Text text="Payment Way Name" />
                                    </Column>
                                    <Column	>
                                        <Text text="Payment Gate"/>
                                    </Column>
                                    <Column	>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{pwtxt}" />
                                            <Link href="{plink}" text="{plink}"/>
                                            <HBox>
                                                <Button type="Transparent" icon="sap-icon://delete" tooltip="Delete Payment Way" press="delpayment" />
                                                <Button type="Transparent" icon="sap-icon://edit" tooltip="Edit Payment Way" press="editpayment" />
                                            </HBox>

                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="currencs" icon="sap-icon://lead" iconColor="Natural" text="Currency Settings" count="8">
                        <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
                            <Table id="currenttable" inset="false" items="{
                                            path: '/currency'
                                        }">
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button type="Transparent" icon="sap-icon://add" text="Add New Currency" press="editcurrency"/>
                                            <ToolbarSpacer />
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <infoToolbar>
                                    <Toolbar active="true">
                                        <Title text="Currency  Setting's"/>
                                    </Toolbar>
                                </infoToolbar>
                                <columns>
                                    <Column>
                                        <Text text="Currency  Name" />
                                    </Column>
                                    <Column	>
                                    </Column>
                                    <Column	>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{fbtxt}" />
                                            <HBox>
                                                <Button type="Transparent" icon="sap-icon://delete" tooltip="Delete Currency" press="delcurrency" />
                                                <Button type="Transparent" icon="sap-icon://edit" tooltip="Edit Currency" press="editcurrency" />
                                            </HBox>

                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="headerset" icon="sap-icon://simple-payment" iconColor="Positive" text="Header Setting's" count="9">
                        <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
                            <Table mode="SingleSelectLeft" id="hstable" inset="false" items="{
                                            path: '/headerset'
                                        }">
                                <!-- headerset -->
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button type="Transparent" icon="sap-icon://edit" text="Edit Header Setting's" press="editheaderset"/>
                                            <ToolbarSpacer />
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <infoToolbar>
                                    <Toolbar active="true">
                                        <Title text="Header Setting's"/>
                                    </Toolbar>
                                </infoToolbar>
                                <columns>
                                    <Column>
                                        <Text text="Title" />

                                    </Column>
                                    <Column>
                                        <Text text="Link Name" />
                                    </Column>
                                    <Column>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{hsimg}"/>
                                            <Link text="{hslink}" press="" href="{hslink}" />
                                            <HBox>
                                            </HBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <VBox width="100%" alignItems="Center" justifyContent="Center" id="editheades" visible="false">
                                <VBox alignItems="Center" justifyContent="Center" width="100%">
                                    <HBox class="sapUiTinyMarginTop" alignItems="Center" justifyContent="Center" width="100%">
                                        <Label text="Title" width="130px" />
                                        <Label text=":" width="10px" />
                                        <VBox width="100%">
                                            <Input value="" id="hhead" width="400px"/>
                                        </VBox>
                                    </HBox>
                                    <HBox alignItems="Center" justifyContent="Center" width="100%" class="sapUiTinyMarginTop">
                                        <Text width="130px" text="Link"/>
                                        <Label text=":" width="10px" />
                                        <HBox width="100%">
                                          <Input value="" id="lidk" width="400px"/>
                                        </HBox>
                                    </HBox>
                                       <HBox alignItems="Start" justifyContent="Start" width="100%" class="sapUiTinyMarginTop">
                                        <Button type="Transparent" text="Save Changes" press="saveheader" icon="sap-icon://save"/>
                                    </HBox>
                                </VBox>
                            </VBox>
                        </ScrollContainer>
                    </IconTabFilter>
                    <IconTabFilter key="mnames" icon="sap-icon://lead" iconColor="Natural" text="Mail Header Settings" count="10">
                    <HBox>
                        <Input value="{/mhead/0/mhstxt}" id="btnmhead" enabled="false"/>
                        <Button text="Edit" icon="sap-icon://edit" type="Transparent" press="changevismhead"/>
                        <Button text="Save" icon="sap-icon://save" type="Transparent" press="savemhead" visible="false" id="savemh"/>
                    </HBox>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="company" icon="sap-icon://building" iconColor="Positive" text="Company  Setting's" count="11">
                        <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
                            <Table mode="SingleSelectLeft" id="companytable" inset="false" items="{
                                            path: '/company'
                                        }">
                                <!-- headerset -->
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button type="Transparent" icon="sap-icon://edit" text="Edit Company Setting's" press="editcompany"/>
                                            <ToolbarSpacer />
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <infoToolbar>
                                    <Toolbar active="true">
                                        <Title text="Company Setting's"/>
                                    </Toolbar>
                                </infoToolbar>
                                <columns>
                                    <Column>
                                        <Text text="Company Name" />

                                    </Column>
                                    <Column>
                                        <Text text="Company Adress" />
                                    </Column>
                                    <Column>
                                        <Text text="ID/IC" />
                                    </Column>
                                    <Column>
                                        <Text text="VAT REG./DIC" />
                                    </Column>
                                    <Column>
                                        <Text text="Bank Name" />
                                    </Column>
                                <Column>
                                    <Text text="Bank Adress" />
                                </Column>
                                    <Column>
                                        <Text text="Bank Account No" />
                                    </Column>
                                    <Column>
                                        <Text text="IBAN" />
                                    </Column>
                                    <Column>
                                        <Text text="BICSWIFT" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{cpname}" />
                                            <Text text="{cpadress}" />
                                            <Text text="{cpidic}" />
                                            <Text text="{cpvatreg}" />
                                            <Text text="{cpbankname}" />
                                            <Text text="{cpbankadres}" />
                                            <Text text="{cpbankaccount}" />
                                            <Text text="{cpiban}" />
                                            <Text text="{cpbicswift}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>

                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="users" icon="sap-icon://account" iconColor="Natural" text="User's" count="12">
                        <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
                            <Table id="userstable"  inset="false" items="{
                                            path: '/users'
                                        }">
                                <columns>
                                    <Column>
                                        <Text text="User ID" />

                                    </Column>
                                    <Column>
                                        <Text text="User Name" />
                                    </Column>
                                    <Column>
                                        <Text text="User LastName" />
                                    </Column>
                                    <Column>
                                        <Text text="Article ID" />
                                    </Column>
                                    <Column>
                                        <Text text="Article Name" />
                                    </Column>
                                    <Column>
                                        <Text text="Article Subject" />
                                    </Column>
                                    <Column>
                                        <Text text="Article Type" />
                                    </Column>
                                    <Column>
                                        <Text text="Presentation Type" />
                                    </Column>
                                    <Column>
                                        <Text text="File" />
                                    </Column>

                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{usid}" />
                                            <Text text="{usname}" />
                                            <Text text="{uslname}" />
                                            <Text text="{btid}" />
                                            <Text text="{brdcastname}" />
                                            <Text text="{brdsubject}" />
                                            <Text text="{abstxt}" />
                                            <Text text="{btypetxt}" />
                                            <Link text="{bcfname}" href="/symposiumapp{bcfpath}{bcext}" class="sapUiTinyMarginEnd" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>

                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter key="proformaimg" icon="sap-icon://picture" iconColor="Positive" text="Proforma Img Setting's" count="13">
                        <ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
                          <VBox>
                              <HBox>
                                  <Button type="Transparent" icon="sap-icon://edit" text="Edit Proforma Image Setting's" press="editpfimage"/>
                              </HBox>
                          </VBox>
                            <Table   inset="false" items="{
                                            path: '/pimages'
                                        }">
                                <columns>
                                    <Column>
                                        <Text text="Header Image" />

                                    </Column>
                                    <Column>
                                        <Text text="Footer Image" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Image
                                                    src="{pheaderimg}"
                                                    densityAware="false"
                                                    width="300px" >
                                            </Image>
                                            <Image
                                                    src="{pfooterimg}"
                                                    densityAware="false"
                                                    width="300px" >
                                            </Image>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <VBox width="100%" alignItems="Center" justifyContent="Center" id="filesvb" visible="false">
                                <VBox alignItems="Center" justifyContent="Center" width="100%">
                                    <HBox class="sapUiTinyMarginTop" alignItems="Center" justifyContent="Center" width="100%">
                                        <Label text="Header File" width="130px" />
                                        <Label text=":" width="10px" />
                                        <VBox width="100%">
                                            <u:FileUploader id="fileUploader" fileType= "png,jpg" change="changefile" style="Emphasized" tooltip="please select jpg or png file.." />

                                        </VBox>
                                    </HBox>
                                    <HBox class="sapUiTinyMarginTop" alignItems="Center" justifyContent="Center" width="100%">
                                        <Label text="Footer File" width="130px" />
                                        <Label text=":" width="10px" />
                                        <VBox width="100%">
                                            <u:FileUploader id="fileUploaderf"  fileType= "png,jpg" change="changefilef" style="Emphasized" tooltip="please select jpg or png file.." />

                                        </VBox>
                                    </HBox>
                                    <HBox alignItems="Start" justifyContent="Start" width="100%" class="sapUiTinyMarginTop">
                                        <Button type="Transparent" press="saveimages" text="Save Changes" icon="sap-icon://save"/>
                                    </HBox>
                                </VBox>
                            </VBox>
                        </ScrollContainer>

                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>